{% form_theme edit_form _self %}

{% block form_row %}
    <div class='form-group'>
        {{- form_label(form) -}}
        {{- form_errors(form) -}}
        {{- form_widget(form, { 'attr': { 'class': 'form-control' }}) -}}
    </div>
{% endblock form_row %}

<h1>Редактировать книгу</h1>

<div class="col-xs-5">
    {{ form_start(edit_form) }}
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.author) }}
    {{ form_row(edit_form.category) }}
    {{ form_row(edit_form.description) }}

    {# public field #}
    <div class='form-group'>
        {{ form_widget(edit_form.public) }}
        {{ form_label(edit_form.public) }}
        {{ form_errors(edit_form.public) }}
    </div>

    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <div class="panel-heading" role="tab" id="headingOne">
                <h4 class="panel-title">
                    Дополнительная информация
                </h4>
            </div>
            </a>
            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                <div class="panel-body">
                    {{ form_row(edit_form.pages) }}
                    {{ form_row(edit_form.link) }}
                    {{ form_row(edit_form.edition) }}

                    {# published field #}
                    <div class='form-group'>
                        {{ form_label(edit_form.published) }}
                        {{ form_errors(edit_form.published) }}
                        {{ form_widget(edit_form.published) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pull-left"><a class="btn btn-default" href="{{ path('book') }}">Обратно к списку</a></div>
    <div class="pull-right"><button type="submit" class="btn btn-primary">Сохранить</button></div>

    {{ form_end(edit_form) }}
</div>

<div class="clearfix"></div>
{{ form(delete_form) }}

<script type="application/javascript">
    $('.collapse').collapse();
</script>
