{% extends '@OpensoftBookshelf/layout.html.twig' %}

{% block content -%}
    <h1>{{ entity.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ entity.link }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('book') }}">
        Обратно к списку
    </a>

    <a href="{{ path('book_edit', { 'id': entity.id }) }}">
        Редактировать
    </a>

    {{ form(owned_form) }}
    {{ form(delete_form) }}
{% endblock %}
