{% extends "OpensoftBookshelfBundle::layout.html.twig" %}

{% block content -%}
    <h1>Contact list</h1>

    <table class="table table-bordered table-hover bookshelf-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contact_type_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td align="center" class="col-md-1">
                    <a href="{{ path('contact_type_edit', {'id': entity.id}) }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </td>
                <td align="center" class="col-md-1">
                    <a href="{{ path('contact_type_delete', {'id': entity.id}) }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contact_type_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
